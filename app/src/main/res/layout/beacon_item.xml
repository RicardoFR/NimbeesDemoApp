<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:foregroundGravity="left|right"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/beacon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:paddingLeft="5dip"
            android:background="@color/app_accent"
            android:textSize="18sp">

        </TextView>

        <LinearLayout
            android:id="@+id/linear_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dip"
            android:background="?attr/selectableItemBackgroundBorderless">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/app_accent"
                    android:src="@drawable/ic_input_white_36dp" />

                <TextView
                    android:id="@+id/beacon_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_blue_grey_900"
                    android:paddingRight="10dip"
                    android:paddingEnd="10dip"
                    android:paddingLeft="10dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginStart="8dip"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/app_accent"
                    android:src="@drawable/ic_output_white_36dp" />

                <TextView
                    android:id="@+id/beacon_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_blue_grey_900"
                    android:paddingRight="10dip"
                    android:paddingEnd="10dip"
                    android:paddingLeft="10dip"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

