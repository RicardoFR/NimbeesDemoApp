<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/custom_card_bottom_margin"
    android:layout_marginEnd="@dimen/custom_card_right_margin"
    android:layout_marginLeft="@dimen/custom_card_left_margin"
    android:layout_marginRight="@dimen/custom_card_right_margin"
    android:layout_marginStart="@dimen/custom_card_left_margin"
    android:layout_marginTop="@dimen/custom_card_top_margin"
    android:background="?attr/selectableItemBackground"
    android:foregroundGravity="left|right"
    app:cardCornerRadius="@dimen/custom_card_radius"
    app:cardElevation="@dimen/custom_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/app_accent"
            android:gravity="center_vertical"
            android:padding="2dip">

            <TextView
                android:id="@+id/message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="Placeholder for notification date"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:textSize="12sp"
                tools:ignore="HardcodedText"/>

            <ImageView
                android:id="@+id/message_displayed"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:src="@drawable/ic_visibility_white_36dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_type"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_sms_white_36dp"
                android:tint="@color/app_accent"/>

            <TextView
                android:id="@+id/message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_marginStart="5dip"
                android:gravity="center_vertical"
                android:minLines="2"
                android:padding="5dip"
                android:paddingBottom="10dip"
                android:text="Placeholder for notification text"
                android:textColor="@color/app_accent"
                android:textSize="18sp"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

